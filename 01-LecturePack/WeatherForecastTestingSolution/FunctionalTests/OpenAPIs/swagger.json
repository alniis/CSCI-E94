            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/WeatherForecastUpdate"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/WeatherForecastUpdate"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "WeatherForecast"
        ],
        "summary": "Updates an existing weather forecast with the full payload (idempotent update)\r\nor creates a new weather forecast with a client-provided ID",
        "description": "PUT is used for two scenarios:\r\n1. Full update - Replaces entire resource, requires all fields\r\n2. Create with client-provided ID - Client specifies the resource identifier\r\n\r\nSample request:\r\n\r\nPUT /api/weatherforecast/123e4567-e89b-12d3-a456-426614174000\r\n{\r\n    \"date\": \"2026-01-20T12:00:00Z\",\r\n    \"temperatureC\": 25,\r\n    \"summary\": \"Warm\"\r\n}",
        "operationId": "PutWeatherForecast",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the weather forecast to update or create",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "The complete weather forecast data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WeatherForecastCreate"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/WeatherForecastCreate"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/WeatherForecastCreate"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Indicates the weather forecast was updated successfully"
          },
          "201": {
            "description": "Indicates the weather forecast was created successfully with client-provided ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WeatherForecastResult"
                }
              }
            }
          },
          "400": {
            "description": "Indicates invalid input data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "WeatherForecast"
        ],
        "summary": "Deletes a weather forecast by ID",
        "description": "Sample request:\r\n\r\nDELETE /api/weatherforecast/123e4567-e89b-12d3-a456-426614174000",
        "operationId": "DeleteWeatherForecast",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the weather forecast to delete",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Indicates the weather forecast was deleted successfully"
          },
          "404": {
            "description": "Indicates the weather forecast was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
